<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row no-gutters pt-5">
    <div class="offset-3 col-6">
      <h2>Sign up</h2>
      <div class="label-input-container-sm">
        <div class="label-input-item">
          <div class="row no-gutters">
            <%= f.label :username, class: 'col-4' %>
            <%= f.text_field :username, class: 'col-8' %>
          </div>
        </div>

        <div class="label-input-item">
          <div class="row no-gutters">
            <%= f.label :full_name, class: 'col-4' %>
            <%= f.text_field :full_name, class: 'col-8' %>
          </div>
        </div>

        <div class="label-input-item">
          <div class="row no-gutters">
            <%= f.label :email, class: 'col-4' %>
            <%= f.email_field :email, autocomplete: "email", class: 'col-8' %>
          </div>
        </div>

        <div class="label-input-item">
          <div class="row no-gutters">
            <%= f.label :password, class: 'col-4' %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'col-8' %>
          </div>
        </div>

        <div class="label-input-item">
          <div class="row no-gutters">
            <%= f.label :password_confirmation, class: 'col-4' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-8' %>
          </div>
        </div>

        <%= f.submit "Sign up", class: 'form-submit' %>
      </div>

      <%= link_to 'Already Have an Account?', new_user_session_path, class: 'app-primary-link' %>
    </div>
  </div>
<% end %>